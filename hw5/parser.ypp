													{
														types.push_back(y.type);
													}
													
													output::errorPrototypeMismatch(yylineno, func->name, types);
													exit(1);
												}
												$$.type = func->ret_type;
												buffer.emit("call " + getSizeByType(func->ret_type) + "@" + func->name + "()");
											}
;
FuncID 		: ID {$$ = yylval.id;};

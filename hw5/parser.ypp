			| BOOL	{ $$.type = "BOOL";}

;
Exp 		: LPAREN Exp RPAREN					{
													
													$$ = $2;
												}                  
			| Exp IF LPAREN Exp RPAREN ELSE Exp {
													hook(&$$);
													buffer.bpatch($1.hooklist, $4.label);
													buffer.bpatch($4.hooklist, $4.hooklabel);
													buffer.bpatch($7.hooklist, $7.hooklabel);
													checkBoolean($4);
													if (isNumeral($1) && isNumeral($7))
													{
														$$.type = largestType($1.type, $7.type);
														std::string truelabel = fresh("true"), falselabel = fresh("false"), endlabel = fresh("end");
														buffer.emit(truelabel + " :");
														buffer.emit("br label %" + endlabel);
														
														buffer.emit(falselabel + " :");
														buffer.emit("br label %" + endlabel);

														buffer.emit(endlabel + " :");
														$$.reg = fresh("%t");
														buffer.emit($$.reg + " = phi " +
															getSizeByType($$.type) + " [" + $1.reg + ", %" + truelabel 
															+ " ], [" + $7.reg + ", %" + falselabel + " ]"
														);

														buffer.bpatch($4.truelist, truelabel);
														buffer.bpatch($4.falselist, falselabel);

													}
													else if ($1.type != $7.type)
													{
														output::errorMismatch(yylineno);
														exit(1);
													}
													else // BOOLEAN
													{
														$$.type = $1.type;
														
														buffer.bpatch($4.truelist, $1.hooklabel);
														buffer.bpatch($4.falselist, $7.label);
														$$.truelist = CodeBuffer::merge($1.truelist, $7.truelist);
														$$.falselist = CodeBuffer::merge($1.falselist, $7.falselist);
														
													}
													
													
													



												}
			| Exp ADD Exp 				{
											hook(&$$);
											bphook(&$1);
											bphook(&$3);
											checkNumeral($1);
											checkNumeral($3);

											$$.type = largestType($1.type, $3.type);
											$$.reg = fresh("%t");
											zext(&$1, &$3);
											buffer.emit($$.reg + " = add " + getLargestType($1.type,$3.type) + " " + $1.reg + ", " + $3.reg);
										}
			| Exp SUB Exp				{
											hook(&$$);
											bphook(&$1);
											bphook(&$3);
											checkNumeral($1);
											checkNumeral($3);

											$$.type = largestType($1.type, $3.type);
											$$.reg = fresh("%t");
											zext(&$1, &$3);
											buffer.emit($$.reg + " = sub " + getLargestType($1.type,$3.type) + " " + $1.reg + ", " + $3.reg);
										}
			| Exp DIV Exp				{
											hook(&$$);
											bphook(&$1);
											bphook(&$3);
											checkNumeral($1);
											checkNumeral($3);
											$$.type = largestType($1.type, $3.type);
											$$.reg = fresh("%t");
											zext(&$1, &$3);
											std::string type = $$.type == "INT" ? "sdiv" : "udiv";
											buffer.emit($$.reg + " = " + type + " " + getLargestType($1.type,$3.type) + " " + $1.reg + ", " + $3.reg);
			
										}
			
			| Exp MULT Exp				{	
											hook(&$$);
											bphook(&$1);
											bphook(&$3);
											checkNumeral($1);
											checkNumeral($3);
											$$.reg = fresh("%t");
											zext(&$1, &$3);
											buffer.emit($$.reg + " = mul " + getLargestType($1.type,$3.type) + " " + $1.reg + ", " + $3.reg);
										}
			| ID 						{
											hook(&$$);
											TYPEClass* y = manager.get(yylval.id);

											if (y == nullptr)
											{
												output::errorUndef(yylineno, yylval.id);

int fact(int x)
{
    if(x <= 1)
        return 1;
    return fact(x - 1) * x;
}

void main()
{
    print("This is a recursive function called in trenary op");
    print("Good luck");

    int x = fact(2) if (fact(5) < 3) else fact(7);
    if(x == fact(7))
        print("round 1 - OK");
    else
        print("Sucks to suck");

    print("Now will call recursive func in NESTED trinary");

    int y = (fact(0) if(fact(60) < 8) else fact(3)) if (fact(5) > 3) else fact(20);
    if(y == fact(0))
        print("round 2 - OK");
    else    
        print("You are a failure");

    print("Now will call recursive func in double NESTED trinary");

    int z = (fact(0) if(fact(60) < 8) else fact(3)) if (fact(5) < 3) else (fact(20) if (fact(2) > 0) else fact(0));
    if(z == fact(20))
        print("round 3 - OK");
    else
        print("UNLUCKY you failed");
    
    print("ok bye!");

}